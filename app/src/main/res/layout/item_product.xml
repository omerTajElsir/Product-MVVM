<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <variable
        name="productViewModel"
        type="io.github.erikjhordanrey.product_mvvm.viewmodel.ItemProductViewModel"/>
    <variable
        name="mainVM"
        type="io.github.erikjhordanrey.product_mvvm.viewmodel.ProductViewModel"/>
  </data>



  <RelativeLayout
      android:id="@+id/item_product"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?attr/selectableItemBackground"
      android:onClick="@{productViewModel::onItemClick}"
      android:padding="@dimen/spacing_large">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:imageUrl="@{productViewModel.pic}"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/image_product"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_toEndOf="@+id/image_product"
        android:text="@{productViewModel.fullName}"
        android:textColor="@android:color/primary_text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="mr gary allen"/>

    <ImageButton
      android:id="@+id/delete"
      android:scaleType="fitXY"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/label_name"
        android:background="@drawable/delete"/>



    <TextView
        android:id="@+id/label_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/label_name"
        android:layout_below="@+id/label_name"
        android:text="@{productViewModel.price}"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        tools:text="$25"/>

    <TextView
        android:id="@+id/label_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/label_phone"
        android:layout_below="@+id/label_phone"
        android:text="@{productViewModel.desc}"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        tools:text="this is just a place holder to test the layout for enormus text"/>

  </RelativeLayout>


</layout>
